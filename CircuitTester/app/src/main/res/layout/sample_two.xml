<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/s2circuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationX="-2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample_2" />

    <CheckBox
        android:id="@+id/s2b1"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="290dp"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:translationX="-3dp"
        app:layout_constraintBottom_toBottomOf="@+id/s2circuit"
        app:layout_constraintEnd_toEndOf="@+id/s2circuit"
        app:layout_constraintStart_toStartOf="@+id/s2circuit"
        app:layout_constraintTop_toTopOf="@+id/s2circuit" />

    <CheckBox
        android:id="@+id/s2b2"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="339dp"
        android:layout_marginBottom="226dp"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:translationX="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/s2circuit"
        app:layout_constraintEnd_toEndOf="@+id/s2circuit"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/s2circuit" />

    <CheckBox
        android:id="@+id/s2b3"
        android:layout_width="46dp"
        android:layout_height="44dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="342dp"
        android:layout_marginBottom="142dp"
        android:scaleX="2.5"
        android:scaleY="2.5"
        android:translationX="-2dp"
        app:layout_constraintBottom_toBottomOf="@+id/s2circuit"
        app:layout_constraintEnd_toEndOf="@+id/s2circuit"
        app:layout_constraintStart_toStartOf="@+id/s2circuit"
        app:layout_constraintTop_toTopOf="@+id/s2circuit" />

    <ImageView
        android:id="@+id/s2Led"
        android:layout_width="55dp"
        android:layout_height="81dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="156dp"
        android:translationX="3dp"
        android:translationY="-9dp"
        app:layout_constraintBottom_toBottomOf="@+id/s2circuit"
        app:layout_constraintEnd_toEndOf="@+id/s2circuit"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/s2circuit"
        app:layout_constraintTop_toTopOf="@+id/s2circuit"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/led_off" />

    <Button
        android:id="@+id/sample2Back"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/retro"
        android:gravity="center"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>